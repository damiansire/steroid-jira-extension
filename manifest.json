{
    "manifest_version": 3,
    "name": "Steorid Jira",
    "description": "Add extra functionality to jira",
    "version": "1.0",
    "action": {
        "default_popup": "hello.html",
        "default_icon": "images/steroid-jira.png"
    },
    "content_scripts": [
        {
            "js": [
                "scripts/content.js"
            ],
            "matches": [
                "*://*/*/jira/*/boards/*"
            ]
        }
    ],
    "permissions": [
        "activeTab"
    ]
}